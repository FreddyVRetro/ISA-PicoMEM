TESTREG_	macro	reg ; :vararg
	ifnb <reg>
	??ASL instr <,ah,cl,ch,dl,dh,bl,bh,ax,cx,dx,bx,sp,bp,si,di,eax,ecx,edx,ebx,esp,ebp,esi,edi,>,<,&reg&,>
	if ??ASL
		test	reg,reg
	else
		cmp	reg,0
	endif
	endif
endm
