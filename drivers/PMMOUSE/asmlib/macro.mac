MOVREG2		macro	r,rhi,rlo,hi,lo ; :vararg
	ifidni <lo&-&hi>,<al-ah>
		MOVREG_	<r>,ax
	elseifidni <lo&-&hi>,<cl-ch>
		MOVREG_	<r>,cx
	elseifidni <lo&-&hi>,<dl-dh>
		MOVREG_	<r>,dx
	elseifidni <lo&-&hi>,<bl-bh>
		MOVREG_	<r>,bx
	elseif ((.type hi) eq 00100100b) and ((.type lo) eq 00100100b)
		;; symbol is defined and expression is a constant value
		MOVREG_	<r>,<(hi shl 8)+(low lo)>
	else
		MOVRR_	<rlo>,<lo>,<rhi>,<hi>
	endif
endm

MOVREGax_	macro	r:req,rhi:req,rlo:req,val,ahi:=<ah>,alo ; :vararg
	??ASLflag = 0
	ifb <alo>
		??ASLflag = 00001b
	elseifidni <alo>,<al>
		??ASLflag = 00001b
	elseifidni <alo>,<ah>
		??ASLflag = 00010b
	endif
	ifidni <ahi>,<al>
		??ASLflag = ??ASLflag or 01000b
	elseifidni <ahi>,<ah>
		??ASLflag = ??ASLflag or 01000b
	endif
	??ASL instr <,&rlo&,&rhi&,>,<,&alo&,>
	if ??ASL
		??ASLflag = ??ASLflag or 00100b
	endif
	??ASL instr <,&rlo&,&rhi&,>,<,&ahi&,>
	if ??ASL
		??ASLflag = ??ASLflag or 10000b
	endif
	ifidni <val>,<ax>
	  if ((??ASLflag and 00110b) ne 0) or ((??ASLflag and 10001b) eq 10001b)
		;; alo=ah or alo=rlo/rhi or (alo=al and ahi=rlo/rhi)
		MOVREG2	<r>,<rhi>,<rlo>,<ahi>,<alo>
		xchg	ax,r
	  elseif ??ASLflag and 01001b	;; alo=al or ahi=al/ah
		mov	r,ax
		MOVREG2	ax,ah,al,<ahi>,<alo>
	  else
		xchg	r,ax
	    ifidni <ahi>,<rhi>
		mov	al,alo
	    elseifidni <ahi>,<rlo>
		MOVREG2	ax,ah,al,al,<alo>
	    else
		MOVREG2	ax,ah,al,<ahi>,<alo>
	    endif
	  endif
	elseifb <val>
		MOVREG2	ax,ah,al,<ahi>,<alo>
	elseifidni <val>,<r>
		MOVREG2	ax,ah,al,<ahi>,<alo>
	elseifidni <alo>,<rlo>
		MOVREG_	<rhi>,<ahi>
		xchg	ax,r		; OPTIMIZE: instead MOV AX,r
		MOVREG_	<r>,<val>
	elseif ??ASLflag and 10100b	;; alo=rlo/rhi or ahi=rlo/rhi
		MOVREG2	ax,ah,al,<ahi>,<alo>
		MOVREG_	<r>,<val>
	else
		MOVREG_	<r>,<val>
		MOVREG2	ax,ah,al,<ahi>,<alo>
	endif
endm

MOVOFFax_	macro	r:req,rhi:req,rlo:req,off,ahi:=<ah>,alo ; :vararg
	??ASLflag = 0
	ifb <alo>
		??ASLflag = 00001b
	elseifidni <alo>,<al>
		??ASLflag = 00001b
	elseifidni <alo>,<ah>
		??ASLflag = 00010b
	endif
	ifidni <ahi>,<al>
		??ASLflag = ??ASLflag or 01000b
	elseifidni <ahi>,<ah>
		??ASLflag = ??ASLflag or 01000b
	endif
	??ASL instr <,&rlo&,&rhi&,>,<,&alo&,>
	if ??ASL
		??ASLflag = ??ASLflag or 00100b
	endif
	??ASL instr <,&rlo&,&rhi&,>,<,&ahi&,>
	if ??ASL
		??ASLflag = ??ASLflag or 10000b
	endif
	ifidni <off>,<ax>
	  if ((??ASLflag and 00110b) ne 0) or ((??ASLflag and 10001b) eq 10001b)
		;; alo=ah or alo=rlo/rhi or (alo=al and ahi=rlo/rhi)
		MOVREG2	<r>,<rhi>,<rlo>,<ahi>,<alo>
		xchg	ax,r
	  elseif ??ASLflag and 01001b	;; alo=al or ahi=al/ah
		mov	r,ax
		MOVREG2	ax,ah,al,<ahi>,<alo>
	  else
		xchg	r,ax
	    ifidni <ahi>,<rhi>
		mov	al,alo
	    elseifidni <ahi>,<rlo>
		MOVREG2	ax,ah,al,al,<alo>
	    else
		MOVREG2	ax,ah,al,<ahi>,<alo>
	    endif
	  endif
	elseifb <off>
		MOVREG2	ax,ah,al,<ahi>,<alo>
	elseifidni <off>,<r>
		MOVREG2	ax,ah,al,<ahi>,<alo>
	elseifidni <alo>,<rlo>
		MOVREG_	<rhi>,<ahi>
		xchg	ax,r		; OPTIMIZE: instead MOV AX,r
		MOVOFF_	<r>,<off>
	elseif ??ASLflag and 10100b	;; alo=rlo/rhi or ahi=rlo/rhi
		MOVREG2	ax,ah,al,<ahi>,<alo>
		MOVOFF_	<r>,<off>
	else
		MOVOFF_	<r>,<off>
		MOVREG2	ax,ah,al,<ahi>,<alo>
	endif
endm

